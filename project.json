		{
			"id":4,
			"title":"Is it a temporary building or shelter?",
			"type":"single_choice",
			"answer":{
				"saved_as":"dwellingTemp",
				"choices":[
					{"Tent":"Tent"},
					{"Hut":"Jhuggi/Hut"},
					{"Other":"Other"},
					{"No":"Not a temporary shelter"}
