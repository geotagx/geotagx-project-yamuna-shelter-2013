{
	"name":"Shelter",
	"short_name":"shelter2013",
	"category":"Yamuna Monsoon Flooding 2013",
	"description":"Answer the questions about dwellings that you see in the photos.",
	"why":"With this project, we hope to extract data on the damage done to buildings and shelters during the 2013 flooding of the Yamuna river.",
	"questionnaire":[
		{
			"question":"Can you see a building or other shelter in the photo?",
			"key":"dwelling",
			"type":"binary",
			"branch":{
				"no":"end"
			}
		},
		{
			"question":"Is the building or shelter affected by flood waters?",
			"key":"dwellingFlood",
			"type":"select",
			"parameters":{
				"options":[
					{
						"label":"Yes - waters have inundated dwellings",
						"value":"Inundated"
					},
					{
						"label":"Yes - waters appear to have washed away dwellings",
						"value":"WashedAway"
					},
					{
						"label":"No",
						"value":"No"
					}
				]
			}
		},
		{
			"question":"What is the function of the building?",
			"key":"dwellingType",
			"type":"select",
			"parameters":{
				"options":[
					{
						"label":"Private",
						"value":"Private"
					},
					{
						"label":"Public",
						"value":"Public"
					},
					{
						"label":"Religious",
						"value":"Religious"
					}
				]
			}
		},
		{
			"question":"Is it a temporary building or shelter?",
			"key":"dwellingTemp",
			"type":"select",
			"parameters":{
				"options":[
					{
						"label":"Tent",
						"value":"Tent"
					},
					{
						"label":"Jhuggi/Hut",
						"value":"Hut"
					},
					{
						"label":"Not a temporary shelter",
						"value":"No"
					}
				]
			}
		},
		{
			"question":"What is the construction style?",
			"key":"dwellingConstruction",
			"type":"select",
			"parameters":{
				"options":[
					{
						"label":"Pucca",
						"value":"Pucca"
					},
					{
						"label":"Semi-Pucca",
						"value":"SemiPucca"
					},
					{
						"label":"Kutcha",
						"value":"Kutcha"
					}
				]
			}
		},
		{
			"question":"What is the building or shelter made of?",
			"key":"dwellingMaterial",
			"hint":"If the building or shelter is made out of different materials, select all that apply.",
			"type":"checklist",
			"parameters":{
				"options":[
					{
						"label":"Fired bricks",
						"value":"FiredBricks"
					},
					{
						"label":"Mud bricks",
						"value":"MudBricks"
					},
					{
						"label":"Concrete",
						"value":"Concrete"
					},
					{
						"label":"Plastic tarpaulin",
						"value":"Tarp"
					},
					{
						"label":"Plastic sheeting",
						"value":"Plastic"
					},
					{
						"label":"Corrugated iron sheets",
						"value":"Iron"
					},
					{
						"label":"Woven plant material",
						"value":"Plant"
					}
				]
			}
		}
	]
}
